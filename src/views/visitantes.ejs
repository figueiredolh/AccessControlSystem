<%- include('./includes/homeHead') %>
<div class="section-1 abertura">
  <h1 class="section-1-titulo">Senha de Visitante</h1>
  <div class="div-btnAbertura abertura visitante">
    <small class="visitante--small" style="margin-bottom: 0;">Selecione um intervalo de tempo e clique em Gerar</small>
    <div style="margin: 2rem auto;">
      <div class="visitante-container">
        <div class="slider">
          <div class="slider-min">
            <button class="slider-min--up"><i class="fas fa-chevron-up"></i></button>
            <button class="slider-min--down"><i class="fas fa-chevron-down"></i></button>
            <div class="inner-slider" id="min"></div>
          </div>
            <span style="font-weight: bold;">:</span>
          <div class="slider-sec">
            <button class="slider-sec--up"><i class="fas fa-chevron-up"></i></button>
            <button class="slider-sec--down"><i class="fas fa-chevron-down"></i></button>
            <div class="inner-slider" id="sec"></div>
          </div>
        </div>
        <div class="status">
          <div class="status--senha"></div>
          <div class="status--tempo"></div>
        </div>
      </div>
      <div class="time-text">
        <small>Minutos</small>
        <small>Segundos</small>
      </div>
    </div>
    <form class="form-visitante">
      <input type="hidden" name="_csrf" value="<%- csrfToken %>">
      <input type="hidden" name="min" id="minutos" value="0">
      <input type="hidden" name="sec" id="segundos" value="0">
      <input type="hidden" name="senha" id="senha">
      <button type="submit" class="div-btnAbertura--btn">Gerar</button>
    </form>
  </div>
</div>
<script src="/assets/js/timerVisitante.js"></script>
<%- include('./includes/homeFoot') %>