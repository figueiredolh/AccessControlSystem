<%- include('./includes/homeHead') %>
  <div class="section-1">
    <h1 class="section-1-titulo h1-admin">Editar Admin</h1>
    <a class="section-1-link a-return" href="/admins">
      <button>Voltar</button>
    </a>
  </div>
  <form class="form-admin" action="/admins/edit/<%- admin._id %>" method="POST">
    <input type="hidden" name="_csrf" value="<%- csrfToken %>">
    <div class="container-nome">
      <label for="nome">Nome</label>
      <input value="<%= admin.nome %>" type="text" name="nome" id="nome" placeholder="Digite o nome do administrador">
    </div>
    <div class="container-email">
      <label for="email">Email</label>
      <input value="<%= admin.email %>" type="email" name="email" id="email" placeholder="Digite um email vÃ¡lido">
    </div>
    <div class="container-senha">
      <label for="senha">Senha</label>
      <input type="password" name="senha" id="senha" placeholder="Digite uma senha">
    </div>
    <button type="submit" class="btn btn-primary">Editar</button>
  </form>
  <%- include('./includes/alertMessages') %>
  <script src="/assets/js/formScript.js"></script>
    <script>
      let validaForm = new formValidar({
        form: '.form-admin',
        inputs:{
          nome: '#nome',
          email: '#email',
          senha: '#senha'
        }
      })
    </script>
<%- include('./includes/homeFoot') %>